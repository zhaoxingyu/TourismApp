<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/global_title_bar_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout style="@style/actionbar_style" >

        <ImageView
            android:id="@+id/main_top_title_bar_left_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:duplicateParentState="true"
            android:src="@drawable/main_topbar_setting_selector"
            android:clickable="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/main_top_title_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="6"
            android:singleLine="true"
            android:text="乡村游"
            android:textColor="@color/color_common_nav_top_bar_text"
            android:textSize="@dimen/text_bigger" 
            android:visibility="gone"
            />
        
        <ImageView
            android:id="@+id/main_top_title_bar_ivtitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:src="@drawable/ic_topbar_title"
            android:visibility="gone"
             />

        <ImageView
            android:id="@+id/main_top_title_bar_right_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/main_topbar_chat_selector"
            />
    </RelativeLayout>

</LinearLayout>